{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume",
  "type": "object",
  "properties": {
    "additionalProperties": false,
    "header": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "phone": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "email",
        "phone"
      ]
    },
    "qualifications": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "body": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title",
        "body"
      ]
    },
    "skills": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "groups": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "development": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "software": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "platforms": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": [
            "development",
            "software",
            "platforms"
          ]
        }
      },
      "required": [
        "title",
        "groups"
      ]
    },
    "experience": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "jobs": {
          "type": "array",
          "items": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
              "employer": {
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "date": {
                "type": "string"
              },
              "position": {
                "type": "string"
              },
              "additional": {
                "type": "string"
              },
              "achievements": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "required": [
              "employer",
              "location",
              "date",
              "position",
              "achievements"
            ]
          }
        }
      },
      "required": [
        "title",
        "jobs"
      ]
    },
    "education": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "degrees": {
          "type": "array",
          "items": {
            "additionalProperties": false,
            "type": "object",
            "properties": {
              "school": {
                "type": "string"
              },
              "location": {
                "type": "string"
              },
              "date": {
                "type": "string"
              },
              "degree": {
                "type": "string"
              },
              "major": {
                "type": "string"
              }
            },
            "required": [
              "school",
              "location",
              "date",
              "degree",
              "major"
            ]
          }
        }
      },
      "required": [
        "title",
        "degrees"
      ]
    },
    "passions": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "items": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "title",
        "items"
      ]
    }
  },
  "required": [
    "header",
    "qualifications",
    "skills",
    "experience",
    "education",
    "passions"
  ]
}